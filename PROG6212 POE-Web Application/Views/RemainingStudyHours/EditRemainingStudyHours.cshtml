@model PROG6212_POE_Web_Application.Models.TblRemainingStudyHour

@{
    ViewData["Title"] = "EditRemainingStudyHours";
}
<style>
    /*Styling page(W3Schools,2022)*/
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: center;
        padding: 20px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #84bce0;
        color: white;
    }

    .btn {
        padding: 5px 12px;
        font-size: 15px;
        color: white;
        background: #84bce0;
        border: none;
        border-radius: 5px;
    }

    .header {
        width: 100%;
        margin: 50px auto 0px;
        color: white;
        background: #84bce0;
        text-align: center;
        border: 1px solid #B0C4DE;
        border-bottom: none;
        border-radius: 10px 10px 0px 0px;
        padding: 20px;
    }

    .btn {
        padding: 10px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        background: #84bce0;
        border: none;
        border-radius: 15px;
    }
</style>

<div class="header">
    <!--The header is allocated on top of the form(CodeWithAwa, 2022)-->
    <h1>Edit Remaining Study Hours Information</h1>
</div>
<hr />
<div>
    <div>
        <form asp-action="EditRemainingStudyHours">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RemainingModulesHoursId" />
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label"></label>
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelfStudyHours" class="control-label"></label>
                <input asp-for="SelfStudyHours" class="form-control" />
                <span asp-validation-for="SelfStudyHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfHours" class="control-label"></label>
                <input asp-for="NumberOfHours" class="form-control" />
                <span asp-validation-for="NumberOfHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfStudy" class="control-label"></label>
                <input asp-for="DayOfStudy" class="form-control" />
                <span asp-validation-for="DayOfStudy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewRemainingStudyHours">Back to list of remaining study hours</a>
</div>

