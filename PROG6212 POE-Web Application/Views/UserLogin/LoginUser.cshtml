@model PROG6212_POE_Web_Application.Models.TblUser

@{
    ViewData["Title"] = "LoginUser";
}
<style>
    /*Styling page(W3Schools,2022)*/
    /*Hiding navbar in login page*/
    .navbar {
        visibility: hidden;
    }
    /*Hiding footer in login page*/
    footer {
        visibility: hidden;
    }

    * {
        margin: 0px;
        padding: 0px;
    }

    body {
        font-size: 120%;
        background: #e6eeff;
    }

    .header {
        width: 50%;
        margin: 50px auto 0px;
        color: white;
        background: #84bce0;
        text-align: center;
        border: 1px solid #B0C4DE;
        border-bottom: none;
        border-radius: 10px 10px 0px 0px;
        padding: 20px;
    }

    form, .content {
        width: 50%;
        margin: 0px auto;
        padding: 20px;
        border: 1px solid #84bce0;
        background: white;
        border-radius: 0px 0px 10px 10px;
    }

    .input-group {
        margin: 10px 0px 10px 0px;
    }

        .input-group label {
            display: block;
            text-align: left;
            margin: 3px;
        }

        .input-group input {
            height: 30px;
            width: 93%;
            padding: 5px 10px;
            font-size: 16px;
            border-radius: 5px;
            border: 1px solid gray;
        }

    .btn {
        padding: 10px;
        font-size: 20px;
        font-weight: bold;
        color: white;
        background: #84bce0;
        border: none;
        border-radius: 15px;
        float: right;
    }
</style>

<div class="header">
    <!--The header is allocated on top of the form(CodeWithAwa, 2022)-->
    <h1>Login</h1>
</div>

<div>
    <div>
        <form asp-action="LoginUser">
            <a style="color:red"> @ViewBag.Error</a>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <br /><br />
                <p style="text-align:center;">Don't have an account?<a asp-action="RegisterUser">  Register  </a></p>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
